{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste de tous les articles</h1>
    <div class="col-md-8 offset-2">
        {% for article in articles %}
            <h2>
                <a href="/post/{{ article.url }}">{{article.titre}}</a>
            </h2>
            <p><span class="glyphicon glyphicon-time"></span> {{ article.date.format('d/m/Y G:ia') }}</p>

            <p>{{ article.contenu }}</p>
            <a class="btn btn-primary" href="/post/{{ article.url }}">Lire l'article<span class="glyphicon glyphicon-chevron-right"></span></a>
        {% endfor %}
    </div>

{% endblock %}